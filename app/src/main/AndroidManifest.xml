<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coffeeproject2">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".ScanActivity" />
        <activity android:name=".ui.menu.MenuActivity" />
        <activity android:name=".ui.login.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.RegisterActivity"
            android:parentActivityName=".ui.login.MainActivity" />
        <activity
            android:name=".ui.storage.StorageActivity"
            android:parentActivityName=".ui.menu.MenuActivity" />
        <activity
            android:name=".ui.storage.StorageAddActivity"
            android:parentActivityName=".ui.storage.StorageActivity" />
        <activity
            android:name=".settings.SettingsActivity"
            android:parentActivityName=".ui.menu.MenuActivity" />
        <activity
            android:name=".settings.ProfileActivity"
            android:parentActivityName=".ui.menu.MenuActivity" />
        <activity
            android:name=".ui.plantation.PlantationAddActivity"
            android:parentActivityName=".ui.plantation.PlantationActivity" />
        <activity
            android:name=".ui.storage.StorageViewActivity"
            android:parentActivityName=".ui.menu.MenuActivity" />
        <activity
            android:name=".ui.plantation.PlantationViewActivity"
            android:parentActivityName=".ui.plantation.PlantationActivity"></activity>
        <activity
            android:name=".ui.storage.StorageEditActivity"
            android:parentActivityName=".ui.storage.StorageViewActivity"></activity>
        <activity
            android:name=".ui.plantation.PlantationEditActivity"
            android:parentActivityName=".ui.plantation.PlantationViewActivity"></activity>
        <activity
            android:name=".ui.storage.StorageViewList"
            android:parentActivityName=".ui.storage.StorageViewList"></activity>
        <activity
            android:name=".ui.plantation.PlantationViewList"
            android:parentActivityName=".ui.plantation.PlantationViewList"></activity>
        <activity
            android:name=".settings.SettingsAboutActivity"
            android:parentActivityName=".ui.menu.MenuActivity">
        </activity>
    </application>

</manifest>