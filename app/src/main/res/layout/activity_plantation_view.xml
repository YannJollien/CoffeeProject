<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b70f0f"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/plantation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#790000"
        android:elevation="4dp"
        android:theme="@style/ToolBarStyle"
        android:visibility="visible"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/coffee_plantation"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add_plantation"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/button_white"
            android:text="Add"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <Button
            android:id="@+id/btn_edit_plantation"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_white"
            android:text="Edit"
            android:textColor="#ffffff"
            android:textSize="22dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_plantation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/plantation_view_2"></android.support.v7.widget.RecyclerView>

</LinearLayout>